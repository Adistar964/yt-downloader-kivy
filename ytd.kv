<main>:
	url:url
	BoxLayout:
		orientation:'vertical'
		MDToolbar:
			title: 'YTD'
			left_action_items:[['menu',lambda x:navbar.toggle_nav_drawer()]]
			md_bg_color:(255/255,51/255,51/255,1)
		FloatLayout:
			MDTextField:
				id: url
				multiline: False
				size_hint:(0.8,None)
				height:100
				hint_text:'Enter the URL'
				helper_text:"Youtube URL"
				helper_text_mode:"on_focus"
				pos_hint:{'center_x':0.5, 'center_y': 0.7}
				icon_right:"youtube"
				icon_right_color: (255/255,51/255,51/255,1)
			MDFloatingActionButton:
				icon:"clipboard"
				pos_hint:{'center_y':0.54, 'center_x':0.3}
				on_release:root.paste()
			MDFloatingActionButton:
				icon:"format-clear"
				pos_hint:{'center_y':0.54, 'center_x':0.57}
				text_color: (0/255,204/255,153/255,1)
				on_release:
					url.focus = True
					url.text = ''
			MDRectangleFlatIconButton:
				icon:"download"
				text:"Download"
				pos_hint:{'center_y':0.3, 'center_x':0.4}
				text_color: (255/255,51/255,51/255,1)
				on_release:root.show(True)
			MDRectangleFlatButton:
				text:"Download audio"
				pos_hint:{'center_y':0.18, 'center_x':0.4}
				text_color: (255/255,51/255,51/255,1)
				on_release:root.show(False)
	MDNavigationDrawer:
		id : navbar
		BoxLayout:
			orientation: 'vertical'
			Image:
				source:"logo.png"
			ScrollView:
				MDList:
					OneLineIconListItem:
						text:"Help"
						on_release:app.smanager.current = 'helpnav'
						IconLeftWidget:
							icon:"account-question"
					OneLineIconListItem:
						text:"About"
						on_release:app.smanager.current = 'about'
						IconLeftWidget:
							icon:"account"
					OneLineIconListItem:
						text:"Tutorial"
						on_release:app.smanager.current = 'tutorial'
						IconLeftWidget:
							icon:"head-question"