

<tutorial>:
	BoxLayout:
		orientation: 'vertical'
		MDToolbar:
			title: 'YTD'
			left_action_items:[['menu',lambda x:helpbar.toggle_nav_drawer()]]
			md_bg_color:(255/255,51/255,51/255,1)
		BoxLayout:
			orientation: 'vertical'
			padding:16
			Image:
				source:"teach.png"
			ScrollView:
				info:info
				MDLabel:
					id:info
			        text_size: self.width, None
			        size_hint_y: None
			        height: self.texture_size[1]
					text:"This app is mainly made for extracting videos from YouTube.\nSo, for the first, head over to YouTube, then go over to your preferred video, then click on share option.\nAfter that, You can click on 'copy link' option which will get the url address of the video.\nAnd then, Come to this app,  paste your url copied to the text field or You can simply click on the paste option to paste the url copied.\n After that, click on 'download' button to download your preferred video.\nOr you can also click on 'Download audio', for getting the only-audio version of the video.\nThere is also a butotn next to the paste option, which is for clearing the text field if it gets messy.\n"
	MDNavigationDrawer:
		id : helpbar
		BoxLayout:
			orientation: 'vertical'
			Image:
				source:"logo.png"
			ScrollView:
				MDList:
					OneLineIconListItem:
						text:"Home"
						on_release:app.smanager.current = 'main'
						IconLeftWidget:
							icon:"home-circle"
					OneLineIconListItem:
						text:"About"
						on_release:app.smanager.current = 'about'
						IconLeftWidget:
							icon:"account"
					OneLineIconListItem:
						text:"Help"
						on_release:app.smanager.current = 'helpnav'
						IconLeftWidget:
							icon:"account-question"

