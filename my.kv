#:import rgba kivy.utils.get_color_from_hex
#: import icon kivysome.icon

<main>:
	submit:submit
	inp:inp
	FloatLayout:
		ActionBar:
			pos_hint:{'top':1}
		    ActionView:
		        use_separator: True
		        ActionPrevious:
		        	app_icon: 'icon.png'
		            title: '964-Ytd'
		            with_previous: False
		        ActionOverflow:
		        ActionGroup:
			        mode: 'spinner'
		        	text:"Options..."
		        	ActionButton:
		        		text:"Help"
		        		on_release:root.showHelp()
		        	ActionButton:
		        		text:"How to use"
		        		on_release:root.showTut()
		        	ActionButton:
		        		text:"About"
		        		on_release:root.showAbout()

		TextInput:
			id:inp
			multiline:True
			size_hint:(0.8,0.1)
			pos_hint:{'top':0.7, 'center_x':0.5}
			font_size:18 
			padding_x:[30,0]
		Button:
			markup: True
			background_color: (0.2,1,0.6,0.98)
			text:"%s"%icon('clipboard', 24)
			size_hint:(.20, .09)
			pos_hint:{'top':0.57, 'right':0.55}
			on_release: root.putText()
		Button:
			markup:True
			id:submit
			background_color: (0.94117647058,0.07843137254,0.19215686274, 0.5)
			text:'Download %s'%icon('arrow-down', 18)
			size_hint:(.3,.09)
			pos_hint:{'x':0.4,'top':0.45,'right':0.599}

<about>:
	Label:
		text:'App-Name: 964 YTD\nApp created-by:Ali\nApp licensed uner:Adistar-964\nApp-about:Downloading YT videos\n'
		pos_hint:{'top':1, 'right':1}

<helpp>:
	Label:
		text: "If you have issues installing videos, then you can wait\n a little more time as that depends on the internet and file size.\n\nBut if you have any other issues regarding this app(crashing, etc...), then report it to us."
		pos_hint:{'top':1, 'right':1}
		font_size: 15
		text_size: self.width, None
		height: self.texture_size[1]

<ht>:
	Label:
		text:'This app is made for downloading videos from youtube.\nYou first have to go to youtube and select a video, and then copy its link.\n after that, you can open this app and paste the link in the text box provided\nWe also have a button in green color for pasting the link for your ease.\nAtlast, you have to click on that download button which is red in color to download your specified video.\nIf you are facing any problems, then check the help option in the menu\nIf you want to know about this application, then click about-us in the menu.'
		height: self.texture_size[1]
		text_size: (self.width, None)
		font_size: 18
		size_hint_y: None
		pos_hint:{'top':1, 'right':1}

<yterror>:
	Label:
		text: "Invalid URL Path entered!\nPlease try again with valid URL path"
		pos_hint: {'top':1, 'right':1} 

<ytsuccess>:
	Label:
		text:"Successfully installed The Youtube Video.\nYou can now watch it."
		pos_hint:{'top':1, 'right':1}